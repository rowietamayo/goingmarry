{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/auth/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/products/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/add/products(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/admin/(.*)",
      "dest": "server/index.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
